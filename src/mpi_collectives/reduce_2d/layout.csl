const Pw: u16 = 8;
const Ph: u16 = 8;

layout {
  @set_rectangle(Pw, Ph);

  var Py: u16 = 0;
  while (Py < Ph) : (Py += 1) {

    var Px: u16 = 0;
    while (Px < Pw) : (Px += 1) {
      // PE id in row order
      @set_tile_code(Px, Py, "code.csl", .{ .pe_id = Py * Pw + Px, .id_x = Px, .id_y = Py });
    }
  }
}